{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "sourceMap": true,
    "strict": true,
    "paths": {
      "@/*": ["app/*"],
      "@/component*": ["frontend/components/*"]
    }
  },
  "include": ["app/**/*", "frontend/components/*"],
  "exclude": [
    "**/dist",
    "**/node_modules",
    "**/test"
  ]
}